{
  "name": "wtlink",
  "version": "2.0.0",
  "description": "Interactive CLI tool for managing configuration file links between git worktrees. Share config files while keeping build artifacts separate.",
  "main": "dist/src/manage-manifest.js",
  "bin": {
    "wtlink": "dist/src/cli.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "prepare": "npm run build",
    "watch": "tsc --project tsconfig.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "files": [
    "dist/src/**/*.js",
    "!dist/src/**/*.test.js",
    "!dist/src/**/*.backup.js",
    "!dist/src/**/*.old.js",
    "README.md",
    "ARCHITECTURE.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "git",
    "worktree",
    "config",
    "sync",
    "hard-link",
    "cli-tool",
    "git-worktree",
    "configuration-management",
    "developer-tools",
    "monorepo"
  ],
  "author": "Chris Sena",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrissena/wtlink.git"
  },
  "bugs": {
    "url": "https://github.com/chrissena/wtlink/issues"
  },
  "homepage": "https://github.com/chrissena/wtlink#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0"
  },
  "preferGlobal": true,
  "dependencies": {
    "@preact/signals-core": "^1.12.1",
    "chalk": "^4.1.2",
    "inquirer": "^8.2.4",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
